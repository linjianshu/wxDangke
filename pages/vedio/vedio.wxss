/* pages/newsList/newsList.wxss */
.head{
  background-color: red;
  height: 40px;
  padding-top: 10px;
}

.head input{
  width: 80%;
  background-color: #fff;
  height: 30px;
  margin-left: auto;
  margin-right: auto;
  border-radius: 3px;
  font: size 12px;
  padding-left: 6px;
  padding-right: 6px;
}

.type-pad{
  height: 40px;
  border-bottom:1px solid #f0f0f0;
  line-height: 40px;
}

.type-pad text {
  margin-left: 20px;
  font-size: 14px;
}

.type-pad text.selected{
  color: red;
}

.body{
  margin-top: 10px;
  background-color: #f0f0f0;
}
.body .item .user-info{
  height: 30px;
  padding-left: 10px;
  padding-top: 5px;
}

.body .item .user-info text{
  font-size: 14px;
  margin-left: 10px;
}

.body .item .user-info image{
  width: 30px;
  height: 30px;
  border-radius: 30px;
  vertical-align: middle;
}

.body .item .user-info .focus{
  padding-left: 10px;
  border-left: 1px solid #ccc;
}

.body .item .user-info text.no-focus{
  color: red;
}

.body .item .title{
  font-size: 14px;
  padding: 10px;
}

.body .item .content{
  padding: 0 10px;
}

.body .item .content video{
  width: 100%;
  height: 200px;
}

.body .item :first-child{
  padding-top: 0px;
  margin-top: 0px;
}
.body .item {
  background-color: #fff;
  margin-top: 10px;
  padding-top: 10px;
  padding-bottom: 5px;
  /* border-bottom:solid #f0f0f0 5px ;  */
}

.body .item .content image{
  width: 100%;
  height: 180px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}